<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <EditText
       android:id="@+id/text1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toTopOf="parent"
       android:hint="@string/fill_number"
       android:layout_margin="@dimen/dimen_8dp"
       android:inputType="number"/>

    <EditText android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:hint="@string/fill_number"
        android:layout_margin="@dimen/dimen_8dp"
        android:inputType="number"/>

    <Button
        android:id="@+id/btn_sum"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/text2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintRight_toLeftOf="@id/btn_sub"/>
    <Button
        android:id="@+id/btn_sub"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toRightOf="@id/btn_sum"
        app:layout_constraintRight_toLeftOf="@id/btn_div"/>

    <Button
        android:id="@+id/btn_div"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="/"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintLeft_toRightOf="@id/btn_sub"
        app:layout_constraintRight_toLeftOf="@id/btn_mult"/>

    <Button
        android:id="@+id/btn_mult"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="*"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_orange_dark"
        android:paddingBottom="@dimen/dimen_8dp"
        android:paddingTop="@dimen/dimen_8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/btn_div"
        app:layout_constraintLeft_toRightOf="@id/btn_div"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text=""
        android:textSize="30sp"
        android:textColor="@color/colrWhite"
        android:layout_margin="@dimen/dimen_8dp"
        android:background="@color/colorVenomgreen"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="100dp"
        app:layout_constraintTop_toBottomOf="@id/btn_mult"
        />
</androidx.constraintlayout.widget.ConstraintLayout>